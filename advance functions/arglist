
def addition(*args):
    result=0
    for arg in args:
        result += arg
    return result
   

def main():
    #simple addition
    print(addition(1,56,5,6,34,4))
    print(addition(1,34,4))

    #addition for a list of numbers
    myNums = [3, 34, 64, 3, 78, 9]
    print(addition(*myNums))

if __name__ == "__main__":
    main()